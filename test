  <script>
    // init icons & year
    window.addEventListener('DOMContentLoaded', () => {
      if (window.lucide && lucide.createIcons) lucide.createIcons();
      const y=document.getElementById('year'); if(y) y.textContent = new Date().getFullYear();
    });

    // Before/After slider logic (vanilla, works with any count)
    function initBA(root){
      const top = root.querySelector('.ba-top');
      const handle = root.querySelector('.ba-handle');
      const wrapRect = () => root.getBoundingClientRect();
      function setX(clientX){
        const r = wrapRect();
        let x = Math.min(Math.max(clientX - r.left, 0), r.width); // clamp 0..width
        const perc = (x / r.width) * 100;
        top.style.width = perc + '%';
        handle.style.left = perc + '%';
      }
      // start in middle
      setX(wrapRect().left + wrapRect().width / 2);
      let dragging = false;
      const start = (e)=>{ dragging = true; setX((e.touches?e.touches[0].clientX:e.clientX)); e.preventDefault(); };
      const move  = (e)=>{ if(!dragging) return; setX((e.touches?e.touches[0].clientX:e.clientX)); };
      const end   = ()=> dragging = false;
      root.addEventListener('mousedown', start);
      window.addEventListener('mousemove', move);
      window.addEventListener('mouseup', end);
      root.addEventListener('touchstart', start, {passive:false});
      window.addEventListener('touchmove', move, {passive:false});
      window.addEventListener('touchend', end);
      window.addEventListener('resize', ()=> setX(wrapRect().left + wrapRect().width / 2));
    }
    document.querySelectorAll('.ba-wrap').forEach(initBA);
  </script>
